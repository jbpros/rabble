{
  "manifest_version": 2,

  "name": "Rabble",
  "description": "Bring Rabble mob programming closer to your desktop",
  "version": "1.0",

  "background": {
    "persistent": true,
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "permissions": ["activeTab", "storage"]
}
